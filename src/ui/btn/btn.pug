mixin btn(button)
  if button
    -
      var {
        svgLeft,
        svgRight,
        text,
        tag,
      } = button

    #{tag || 'button'}.btn-common&attributes(attributes)
      span.btn-common__filler
      span.btn-common__text
        span.btn-common__content
          if svgLeft
            +svgsprite(svgLeft)
          span= text
          if svgRight
            +svgsprite(svgRight)
